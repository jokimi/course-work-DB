<UserControl x:Class="PodSproutFM.UserControls.UserUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PodSproutFM.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Margin="10" CornerRadius="10" Padding="30 15" Background="{StaticResource OffWhiteBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20 0">
                    <TextBlock Text="ID" FontFamily="Architun" Foreground="#6d8960"/>
                    <TextBlock FontSize="{StaticResource FontSizeLarge}" x:Name="blockId" Text="ID" FontFamily="Architun"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20 0">
                    <TextBlock Text="Роль" FontFamily="Architun" Foreground="#6d8960"/>
                    <TextBlock FontSize="{StaticResource FontSizeLarge}" x:Name="blockRole" Text="ROLE" FontFamily="Architun"/>
                </StackPanel>
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20 0">
                    <TextBlock Text="Логин" FontFamily="Architun" Foreground="#6d8960"/>
                    <TextBlock FontSize="{StaticResource FontSizeLarge}" x:Name="blockLog" Text="LOGIN" FontFamily="Architun"/>
                </StackPanel>
                <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="20 0">
                    <TextBlock Text="Пароль" FontFamily="Architun" Foreground="#6d8960"/>
                    <TextBlock FontSize="{StaticResource FontSizeLarge}" x:Name="blockPass" Text="PASSWORD" FontFamily="Architun"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>